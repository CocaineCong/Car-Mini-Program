/* pages/user/user.wxss */

/*虚化背景  */

page {
  min-height: 100vh;
  position: relative;
}

.bg {
  width: 750rpx;
  height: 100%;
  position: absolute;
  z-index: -10;
}

/*头部盒模型  */

.head {
  display: table;
  position: relative;
  margin: 0 auto;
}

/*头部照片  */

.headphoto {
  width: 150rpx;
  height: 100rpx;
  border-radius: 50%;
}

/*相机背景  */

.photobg {
  width: 100%;
  height: 100%;
}

/*相机icon  */

.camera {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 1px solid #2f2f2f ;
  z-index: 1;
}

/*基本信息  */

.basic {
  padding-left: 20px;
  display: block;
  padding-right: 40rpx;
  width: 100%;
  margin-top: 70rpx;
}

/*信息文本  */

.basictext {
  font-size: 30rpx;
  color: #828282;
  display: block;
}

.namebox {
  width: 100%;
  height: 60rpx;
  border-bottom: 1rpx solid #828282;
  margin-top: 35rpx;
  padding-bottom: 68rpx;
  z-index: 1px;
}

.name {
  margin-left: 60rpx;
  font-size: 33rpx;
  color: #2f2f2f;
  float: left;
  /* left: 1; */

}

/* .namebox {
  width: auto;
  height: auto;
  position: relative;
} */


.nametext {
  font-size: 33rpx;
  color: #828282;
  float: right;
  padding-right: 25rpx;
  text-align: right;
  z-index: 3;
}

.mode {
  position: relative;
  z-index: 1;
  font-size: 33rpx;
  color: #828282;
  float: right;
  padding-right: 25rpx;
  text-align: right;
}

.field{
  position: relative;
  z-index: 1;
  font-size: 33rpx;
  color: #828282;
  float: right;
  padding-right: 25rpx;
  text-align: right;
}

.nameicon {
  width: 18rpx;
  height: 32rpx;
  float: right;
  padding-top: 8rpx;
  padding-right: 5rpx;
}

.nameicon-left {
  vertical-align: auto;
  /* border: 1px solid red; */
  width: 40rpx;
  height: 40rpx;
  /* float: left; */
  padding-top: 4rpx;
  position: absolute;
  /* left: 0em; */
  padding-left: 10rpx;
}

.back {
  font-size: 30rpx;
  color: #82c6df;
  display: block;
  text-align: center;
  line-height: 70rpx;
  width: 130rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0);
  border: 3rpx solid #28bdf4;
  border-radius: 25rpx;
  position: absolute;
  left: 50%;
  margin-left: -65rpx;
  bottom: 60rpx;
}
