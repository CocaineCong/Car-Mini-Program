	<view class="topic-all">
			<view wx:for="{{ topicList }}" wx:key="topicList" class="topic-content">
						<view data-id="{{item.id}}" class="{{item.id == idx ?'choose':'notchoose'}}" bindtap="goIndex" data-id="{{item.id}}">#{{item.category_name}}  </view>
			</view>
	</view>

