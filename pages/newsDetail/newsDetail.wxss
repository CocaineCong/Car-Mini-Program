/* pages/newsDetail/newsDetail.wxss */
.red{
  color: red;
}

.container-m{
  padding-bottom: 100rpx;
}
.big-avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.small-avatar {
  height: 40rpx;
  width: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.top-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 40rpx;
}

.top-view .info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top-view .info .avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.top-view .info .author {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.top-view .info .author .date {
  font-size: 28rpx;
  color: #8c8c8c;
}

.top-view .follow {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.top-view .follow .btn {
  padding: 10rpx 20rpx;
  border: 1rpx solid #4cc5b6;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}


.slide-vew{
  width: 100%;
  height: 100%;
}

.image-detail{
  width: 100%;
  height: 600rpx;
}

.message-view {
  padding: 40rpx;
  border-bottom: 18rpx solid #f5f5f5;
}

.message-view .topic {
  display: flex;
  flex-direction: row;
}

.message-view .topic view {
  margin-top: 15rpx;
  padding: 5rpx 10rpx;
  background-color: #ddd;
  font-size: 28rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.viewer {
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.viewer .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.viewer .left .count {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 25rpx;
}

.viewer .left image {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  margin: 0 5rpx;
}

.viewer .go-icon {
  width: 16rpx;
  height: 16rpx;
}

.comment {
  padding: 40rpx;
}

.comment .tree .item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 40rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.comment .tree .item .body {
  width: 595rpx;
}

.comment .tree .item .user {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #8c8c8c;
  font-size: 28rpx;
}

.comment .tree .item .user .name {
  display: flex;
  flex-direction: column;
}

.comment .tree .item .user .func {
  width: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.comment .tree .item .content {
  padding: 10rpx 5rpx;
  font-size: 30rpx;
}

.comment .tree .item .body .reply {
  background-color: #f5f5f5;
}

.comment .tree .item .body .reply .row {
  padding: 20rpx;
  border-bottom: 1rpx dotted #ddd;
}

.comment .tree .item .body .reply .row .reply-menu {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #8c8c8c;
  font-size: 28rpx;
}

.comment .tree .item .body .reply .row .reply-menu .reply-user {
  display: flex;
  flex-direction: row;
}

.comment .tree .item .body .reply .row .reply-menu .reply-user .reply-name {
  display: flex;
  flex-direction: column;
}

.comment .tree .item .body .reply .row .reply-menu  .reply-func {
  width: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.comment .tree .item .body .reply .row .reply-content {
  padding: 10rpx 5rpx;
  font-size: 30rpx;
}



.buttom-view {
  border-top: 1px solid #ddd;
  background-color: white;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 40rpx;
}

.buttom-view .text-input {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.buttom-view .text-input input {
  border: 1rpx solid #ddd;
  background-color: #f5f5f5;
  width: 575rpx;
  padding: 10rpx;
  border-radius: 20rpx;
}


.buttom-view .comment-area{
  position: relative;
}

.buttom-view .comment-area .top{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 10rpx;
}
.buttom-view .comment-area .reply{
  margin-left: 30rpx;
  font-size: 25rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #ddd;
  border-radius: 10rpx;
}

.buttom-view .comment-area .reply icon{
  padding: 0 8rpx;
}

.buttom-view .comment-area textarea{
  border: 1rpx solid #ddd;
  width: 628rpx;
  padding: 20rpx;
}
.buttom-view .btn{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 10rpx 0;
}

.buttom-view .btn .publish{
  padding: 10rpx 20rpx;
  background-color: #00c8b6;
  color: white;
  border-radius: 10rpx;
}

.buttom-view .comment-area .hide{
  position: absolute;
  right: 0;
  top: -20rpx;
}